@import 'reset'

body
  font-family "ff-meta-serif-web-pro", serif
  color #333

.wrapper
  margin auto
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  width: 60%
  height: 70%

a
  text-decoration none

header
  margin 0 0 50px 0
  .logo
      display inline-block
    img
      display inline-block
    .cy-name
      font-size 24px
      font-family "ff-enzo-web", sans-serif
      font-weight 700
      display inline-block
      padding 22px 18px
      vertical-align top
      em
        font-weight 300
   
  // Navigation
   
  .navigation
    // temporary hide this
    display none
    vertical-align top
    margin-top 20px
    float right

    nav
      ul
        li
          display inline-block
          a
            display block
            padding 8px 14px
            text-transform uppercase
            font-size 12px

// Main
.main
  p
    font-size 20px
    margin 20px 0
    line-height 1.6em

// Footer
footer
  font-family "Helvetica Neue", "Helvetica", Helvetica, Arial, "Lucida Grande", sans-serif
  font-weight bold
  padding 20px 0px
  p
    font-size 13px
    color #999
    line-height 1.5em


@media (max-width: 768px)
  .wrapper
    width 70%
    height 70%

@media (max-width: 610px)
  .wrapper
    width 80%
    height 80%

@media (max-width: 480px)
  .wrapper
    width 90%
    height 90%
    header
      margin 0 0 30px 0

    .cy-name
      font-size 22px
    .main
      p
        font-size 18px