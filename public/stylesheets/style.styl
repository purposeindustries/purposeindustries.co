@import 'reset'

.wrapper
  margin auto
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  width: 60%
  height: 50%

a
  text-decoration none

header
  margin 0 0 50px 0
  .logo
      display inline-block
    img
      display inline-block
    .cy-name
      display inline-block
      padding 26px 12px
      vertical-align top
   
  // Navigation
   
  .navigation
    display inline-block
    vertical-align top
    margin-top 20px
    float right

    nav
      ul
        li
          display inline-block
          a
            display block
            padding 8px 14px
            text-transform uppercase
            font-size 12px

  // Main
.main
  p
    font-size 18px
    margin 20px 0
    line-height 1.3em